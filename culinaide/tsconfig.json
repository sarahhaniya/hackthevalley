{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"typeRoots": ["./src/types", "./node_modules/@types"],
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"strict": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"],
			"@components/*": ["components/*"],
			"@styles/*": ["styles/*"],
			"@hooks/*": ["hooks/*"],
			"@constants/*": ["constants/*"]
		}
	},
	"include": [
		"app",
		"components",
		"styles",
		"constants",
		"hooks",
		".expo/types/**/*.ts",
		"expo-env.d.ts"
	]
}
